<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zhang.zhixuan.savecontact.New"
    >

    <TextView
        android:id="@+id/new_Name_TextView"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_below="@+id/new_Name_TextView"
        android:id="@+id/new_Name_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_below="@+id/new_Name_EditText"
        android:id="@+id/new_Number_TextView"
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_below="@+id/new_Number_TextView"
        android:id="@+id/new_Number_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_below="@+id/new_Number_EditText"
        android:id="@+id/new_Text_TextView"
        android:text="Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <EditText
        android:layout_below="@+id/new_Text_TextView"
        android:id="@+id/new_Text_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:layout_alignParentRight="true"
        android:layout_below="@+id/new_Text_EditText"
        android:text="Save"
        android:id="@+id/new_Save_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>


